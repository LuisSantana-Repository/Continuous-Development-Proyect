# Terraform Variables Example
# Copy this to terraform.tfvars and configure your actual values

# ================================
# Project Configuration
# ================================
project_name = "continuous-development"
aws_region   = "us-east-1"

# ================================
# EC2 Configuration
# ================================
instance_type = "t2.micro"

# Auto Scaling - API
api_min_size         = 1
api_max_size         = 3
api_desired_capacity = 1

# Auto Scaling - Web
web_min_size         = 1
web_max_size         = 3
web_desired_capacity = 1

# ================================
# Database Configuration
# ================================
db_instance_class          = "db.t3.micro"
db_username                = "admin"
db_password                = "ChangeThisPasswordInProduction123!"  # CHANGE THIS!
enable_multi_az            = false
enable_secondary_db        = false
backup_retention_period    = 7
enable_deletion_protection = false

# ================================
# S3 Configuration
# ================================
s3_environment             = "prod"
s3_enable_versioning       = true
s3_enable_logging          = true
s3_enable_lifecycle_rules  = true
s3_enable_notifications    = false
s3_transition_to_ia_days   = 30
s3_transition_to_glacier_days = 90
s3_expiration_days         = 365
s3_cors_allowed_origins    = ["*"]

# ================================
# DynamoDB Configuration
# ================================
dynamodb_environment   = "prod"
dynamodb_enable_ttl    = true
dynamodb_enable_pitr   = false
dynamodb_enable_streams = false

# ================================
# API Environment Variables
# ================================
# These will be stored in SSM Parameter Store
api_env_vars = {
  NODE_ENV    = "production"
  PORT        = "3000"
  JWT_SECRET  = "your-super-secret-jwt-key-change-this"  # CHANGE THIS!
  JWT_EXPIRES_IN = "7d"

  # Add any additional API environment variables here
}

# ================================
# Web Environment Variables
# ================================
# These will be stored in SSM Parameter Store
stamin_env_vars = {
  NODE_ENV              = "production"
  NEXT_PUBLIC_APP_NAME  = "Stamin-Up"
  NEXT_PUBLIC_APP_VERSION = "1.0.0"

  # Note: NEXT_PUBLIC_API_URL is set automatically by user_data script
  # based on the ALB DNS name

  # Add any additional Web environment variables here
}
