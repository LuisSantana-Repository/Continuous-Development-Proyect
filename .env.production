# Node Environment
NODE_ENV=production
PORT=3000

# MySQL Primary (RDS principal)
DB_PRIMARY_HOST=your-rds-primary.xxxxx.us-east-1.rds.amazonaws.com
DB_PRIMARY_PORT=3306
DB_PRIMARY_USER=admin
DB_PRIMARY_PASSWORD=CHANGE_ME_STRONG_PASSWORD
DB_PRIMARY_NAME=my-sql-rds-hot

# MySQL Secondary (RDS analytics)
DB_SECONDARY_HOST=your-rds-secondary.xxxxx.us-east-1.rds.amazonaws.com
DB_SECONDARY_PORT=3306
DB_SECONDARY_USER=admin
DB_SECONDARY_PASSWORD=CHANGE_ME_STRONG_PASSWORD
DB_SECONDARY_NAME=analytics_db

# JWT
JWT_SECRET=CHANGE_ME_SUPER_SECRET_JWT_KEY_MIN_32_CHARS

# AWS Production (no endpoint - uses real AWS services)
# Credentials are automatically obtained from IAM Role on EC2
AWS_REGION=mx-central-1
S3_BUCKET=stamin-up-production-bucket

# DynamoDB Tables
DYNAMODB_CHATS_TABLE=chats
DYNAMODB_MESSAGES_TABLE=messages

# CORS
CORS_ORIGIN=https://your-domain.com
